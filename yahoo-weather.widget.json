{
    "template": "<!-- Download: https://github.com/erikflowers/weather-icons -->\n<!-- And place icons somewhere in your /conf/html folder structure -->\n<div ng-init="ServerPath='/static/weather-icons-master'">\n</div>\n\n<link rel="stylesheet" type="text/css" href="{{ServerPath}}/css/weather-icons.min.css">\n \n<style>\n@media (min-width: 992px) {\n    .col-md-border:not(:last-child) {\n			border-right: 1px solid #d7d7d7;\n    }\n    .col-md-border + .col-md-border {\n			border-left: 1px solid #d7d7d7;\n			margin-left: -1px;\n    }\n  	.day:first-letter {\n    	text-transform: uppercase;\n		}\n  	.current-icon {\n			width: 14em !important;\n  		height: 14em !important;\n  		margin-top: -1em;\n		}\n  	.condition {\n  		height: 2em;\n 		}\n}\n</style>\n\n<div id="container">\n  <div class="row">\n  	<div class="col-md-5">\n      <h2 class="text-left"><b>Renfrew</b></h2>\n      <h2 class="text-left">{{itemValue('Condition')}}</h2>\n    </div>\n    <div class="col-md-4 text-left">\n      <i class="wi wi-yahoo-{{itemValue('Condition_ID')}}" style="font-size: 12em"></i>\n    </div>\n    <div class="col-md-3 text-right">\n      <h2 style="margin-bottom:1em;">{{'%.1f' | sprintf:itemValue('Temperature')}} °C</h2>\n      <h4><img style="height:16px;" src="{{ServerPath}}/images/humidity.png"/> {{itemValue('Humidity')}} %</h5>\n      <h4><img style="height:16px;" src="{{ServerPath}}/images/wind.png"/> {{itemValue('Wind_Speed')}} km/h</h5>\n      <h4><img style="height:16px;" src="{{ServerPath}}/images/feel.png"/> {{itemValue('Temp_Feel')}} °C</h5>\n   	</div>\n  </div>\n	<div class="row" style="margin-top: 1em;">\n		<div class="col-md-3 col-md-border">\n      <h4 class="day">{{itemValue('ObservationTime0') | date:'EEEE'}}</h4>\n      <i class="wi wi-yahoo-{{itemValue('Condition_ID0')}}" style="font-size: 3em"></i>\n      <h5 class="condition">{{itemValue('Condition0')}}</h5>\n      <h4><b>{{'%.0f' | sprintf:itemValue('Temp_Max0')}}</b> / {{'%.0f' | sprintf:itemValue('Temp_Min0')}} °C</h4>\n    </div>\n    <div class="col-md-3 col-md-border">\n      <h4 class="day">{{itemValue('ObservationTime1') | date:'EEEE'}}</h4>\n      <i class="wi wi-yahoo-{{itemValue('Condition_ID1')}}" style="font-size: 3em"></i>\n      <h5 class="condition">{{itemValue('Condition1')}}</h5>\n			<h4><b>{{'%.0f' | sprintf:itemValue('Temp_Max1')}}</b> / {{'%.0f' | sprintf:itemValue('Temp_Min1')}} °C</h4>\n    </div>\n    <div class="col-md-3 col-md-border">\n      <h4 class="day">{{itemValue('ObservationTime2') | date:'EEEE'}}</h4>\n      <i class="wi wi-yahoo-{{itemValue('Condition_ID2')}}" style="font-size: 3em"></i>\n      <h5 class="condition">{{itemValue('Condition2')}}</h5>\n      <h4><b>{{'%.0f' | sprintf:itemValue('Temp_Max2')}}</b> / {{'%.0f' | sprintf:itemValue('Temp_Min2')}} °C</h4>\n    </div>\n    <div class="col-md-3 col-md-border">\n      <h4 class="day">{{itemValue('ObservationTime3') | date:'EEEE'}}</h4>\n      <i class="wi wi-yahoo-{{itemValue('Condition_ID3')}}" style="font-size: 3em"></i>\n      <h5 class="condition">{{itemValue('Condition3')}}</h5>\n      <h4><b>{{'%.0f' | sprintf:itemValue('Temp_Max3')}}</b> / {{'%.0f' | sprintf:itemValue('Temp_Min3')}} °C</h4>\n    </div>\n	</div>\n</div>",
    "name": "Yahoo Weather",
    "author": "Dito Cahya",
    "description": "Local Weather, use with Weather binding"
}
